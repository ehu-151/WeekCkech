<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--カスタムテーマ-->
    <style name="AppTheme.Default" parent="AppTheme">
        <!--メインの色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorPrimaryLight">@color/colorPrimaryLight</item>-->
        <!--&lt;!&ndash;サブの色&ndash;&gt;-->
        <!--<item name="colorSub">@color/colorSub</item>-->
        <!--<item name="colorSubLight">@color/colorSubLight</item>-->
        <!--直線を引くとき,TabLayoutのバー-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--文字の色-->
        <!--<item name="colorChar">@color/colorChar</item>-->
        <!--&lt;!&ndash;境界線の色&ndash;&gt;-->
        <!--<item name="colorBorder">@color/colorBorder</item>-->
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
    </style>

    <style name="TimePickerDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary
        </item> <!-- colorAccent here seems to work just fine? -->
    </style>
    <!--共通-->
    <style name="TextApper">
        <item name="android:textColor">@color/colorChar</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>
    <!--Toolbar-->
    <style name="TextApper.BaseToolbar">
        <item name="android:elevation">0dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
        <item name="titleTextColor">@color/colorChar</item>
    </style>

    <style name="TextApper.BaseToolbar.TasksMainActivity">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextApper.BaseToolbar.AddEditTaskActivity">
        <item name="android:background">@color/colorSubLight</item>
    </style>
    <!--TabLayout-->
    <style name="TextApper.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorChar</item>
        <item name="tabTextColor">@color/colorCharDark</item>
    </style>
    <!--TabItem-->
    <style name="TextApper.TabItem">

    </style>
    <!--ListView-->
    <style name="TextApper.listView">
        <item name="android:background">@color/colorSubLight</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@color/colorBorder</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <!--ListHeader-->
    <style name="TextApper.listView.ListHeader">
        <item name="android:background">@color/colorSub</item>
    </style>
    <!--ListHeader,Title-->
    <style name="TextApper.listView.ListHeader.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">10dp</item>
    </style>
    <!--ListItem-->
    <style name="TextApper.listView.ListItem">

    </style>
    <!--ListItem,Title-->
    <style name="TextApper.listView.ListItem.Title">

    </style>
    <!--ListItem,Detail-->
    <style name="TextApper.listView.ListItem.Detail">

    </style>
    <!--ListItem,HorizontalText-->
    <style name="TextApper.listView.ListItem.HorizontalText">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--CheckBox-->
    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/colorChar</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <!--AddEditTaskActivity-->
    <!--ListView-->
    <style name="TextApper.listViewAddEditTaskActivity">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@color/colorBorder</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <!--ListItem-->
    <style name="TextApper.listViewAddEditTaskActivity.ListItem">
        <item name="android:textSize">15sp</item>
    </style>
    <!--ListItem,detail-->
    <style name="TextApper.listViewAddEditTaskActivity.ListItem.Detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/colorCharDark</item>
    </style>
    <!--ListItem,limittime-->
    <style name="TextApper.listViewAddEditTaskActivity.ListItem.LimitTime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/colorCharDark</item>
    </style>
    <!--ListItem,weekgroup-->
    <style name="TextApper.listViewAddEditTaskActivity.ListItem.WeekGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/colorCharDark</item>
    </style>
    <!--ListItem,notification-->
    <style name="TextApper.listViewAddEditTaskActivity.ListItem.NotificationTime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/colorCharDark</item>
    </style>
    <style name="TextApper.listViewAddEditTaskActivity.ListItem.NotificationTimeInit">
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--SpinnerItem-->
    <style name="TextApper.listViewAddEditTaskActivity.ListItem.SpinnerItem">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MyButton" parent="Theme.MaterialComponents">
        <item name="android:backgroundTint">@color/colorSubLight</item>
        <item name="android:textColor">@color/colorChar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="MyOnlyImageButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:backgroundTint">@color/colorSubLight</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="iconTint">@color/colorChar</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>
