        <!--&lt;!&ndash;境界線の色&ndash;&gt;-->
        <!--<item name="colorBorder">@color/colorBorder</item>-->
    </style>
    <!--共通-->
    <style name="TextApper">
        <item name="android:textColor">@color/colorChar</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>
    <!--TabLayout-->
    <style name="TextApper.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorChar</item>
        <item name="tabTextColor">@color/colorCharDark</item>
    </style>
